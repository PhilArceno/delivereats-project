{% extends "master.html.twig" %}
{% block title %}Delete restaurant
{% endblock %}

{%block content %}
	<div>
		<h1>Delete restaurant</h1>
		<div>Delete restaurant with name:
			{{ v.name }}</div>
		<form method="POST">
			<div>Please confirm this action. It is irreversible</div>
			<input type="submit" value="Yes, delete the restaurant">
		</form>
		<a href="/admin/user/list">Cancel - go back to the list</a>
	</div>
{% endblock %}
