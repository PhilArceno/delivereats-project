{% extends "master.html.twig" %}
{% block title %}Home page
{% endblock %}
{% block content %}

	{% if userSession %}
		<h1>Feed</h1>
		<div>
			<div>Info</div>
			<div>DeliverEats</div>
			<div>Location</div>
		</div>
		<div>
			<div>
				{% for c in categories %}
					<div>{{c.name}}</div>
				{% endfor %}
			</div>
			<div>
				<div>Price</div>
				<div>Rating</div>
			</div>
		</div>
		<div class="restaurants-list">
			{% for r in restaurants %}
				<a href="/restaurant/{{r.id}}">
					<section>
						<h3>{{r.name}}</h3>
						<p>{{r.description}}</p>
					</section>
				</a>
			{% endfor %}
		</div>
		<h2>Do you want to logout?</h2>
		<a href="/logout">Sign Off</a>
	{% else %}
		<h1>Food's Ninja is Here!</h1>
		<h2>Life is better when you're a member</h2>
		<a href="/register">Get Started</a>
		<a href="/login">Sign In</a>
	{% endif %}


{% endblock %}
