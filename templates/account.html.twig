{% extends "master.html.twig" %}

{% block title %}My Account
{% endblock %}

{% block content %}
	<div class="container">
		<h2>Account</h2>
		<div class="container mt-3">
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<a href="/profile">My Profile</a>
				</li>
				{% if userSession.account_type == 'business' %}
					<li class="list-group-item">
						<a href="/manage-restaurants">Manage Restaurants</a>
					</li>
				{% endif %}
				{% if userSession.account_type == 'admin' %}
					<li class="list-group-item">
						<a href="/admin" target="_blank">Admin Interface</a>
					</li>
				{% endif %}
				<li class="list-group-item">
					<a href="/logout">Log out</a>
				</li>
			</ul>
		</div>
	</div>
{% endblock %}
